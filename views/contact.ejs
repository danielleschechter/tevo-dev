<% include /partials/header %>


<!-- CONTENT -->


<div class="container-fw landing"></div>

<div class="container padded carbon pside">
  <div class="row ">
    <div class="col-lg-8 text-center ">

      <h2>Interested in our products?</h2>

      <p>Thank you for your interest in one of our revolutionary products or services. <br/>Please fill out the form
        below so we may route your request properly in order to best assist you.
      </p>
      <hr/>


      <div style="padding-top: 30px;" class="row contact text-center">
        <div class="col-lg-12">

          <ul class="nav nav-pills" style="margin-bottom: 60px;">

            <li class= "col-md-6 col-xs-12 active">
              <a href="#reseller" data-toggle="tab">

                <strong>I'm a Reseller</strong> <br/>
                <span style="font-size: 9px"> (You have tickets)</span>

              </a>
            </li>


            <li class="col-md-6 col-xs-12">
              <a href="#marketer" data-toggle="tab">

                <strong>I'm a Marketer </strong> <br/>
                <span style="font-size: 9px"> (You need tickets)</span>


              </a>
            </li>

          </ul>


          <div class="tab-content">

            <div class="tab-pane active" id="reseller">

              <script type="text/javascript"
                      src="https://leads-capturer.futuresimple.com/embed.js?token=db1bfac32e738f4bfcace1ab4ade7b69"></script>


            </div>

            <div class="tab-pane" id="marketer">

              <% if (submitted) { %>
              <% if (mailgunError) { %>

              <p>Mailgun Error.</p>

              <% } else { %>

              <h3>Thanks <%= firstName %>!</h3>

              <p>We can't wait to speak with you. Someone from our team will be reaching out to you shortly!</p>

              <% } %>
              <% } else { %>

              <form role="form" method="post" action="/contact" id="contact1" name="contact1">
                <div id="contact1-errors" class="contact-errors" style="font-size: 1.4em; color: #f00;"></div>
                <div class="form-group form-inline hidden-xs">
                  <input type="text" style="width: 50%" class="form-control input-lg" name="firstName" id="firstName"
                         placeholder="First Name">
                  <input type="text" style="width: 49%" class="form-control input-lg" name="lastName" id="lastName"
                         placeholder="Last Name">
                </div>

                <div class="form-group visible-xs">
                  <input type="text" class="form-control input-lg" name="firstName" id="firstName"
                         placeholder="First Name">
                </div>

                <div class="form-group visible-xs">
                  <input type="text" class="form-control input-lg" name="lastName" id="lastName"
                         placeholder="Last Name">
                </div>

                <div class="form-group">
                  <input type="text" class="form-control input-lg" name="company" id="company" placeholder="Company">
                </div>


                <div class="form-group form-inline hidden-xs">
                  <input name="email" type="email" style="width: 50%" class="form-control input-lg" id="email"
                         placeholder="Email">
                  <input name="url" type="text" style="width: 49%" class="form-control input-lg" id="url"
                         placeholder="URL">
                </div>

                <div class="form-group visible-xs">
                  <input name="email" type="email" id="email" class="form-control input-lg" id="exampleInputEmail1"
                         placeholder="Email">
                </div>

                <div class="form-group visible-xs">
                  <input name="url" type="text" class="form-control input-lg" id="url" placeholder="URL">
                </div>

                <div class="form-group">
                  <textarea name="notes" rows="5" class="form-control input-lg" id="notes"
                            placeholder="Message"></textarea>
                </div>

                <div class="form-group">
                  <button type="submit" class="btn btn-default btn-lg">Submit</button>
                </div>
              </form>

              <% } %>

            </div>



          </div>

        </div>


      </div>


    </div>

    <div class="col-lg-3 col-md-offset-1" style="margin-top: 20px; border-left: 3px dashed #e2e2e2;
padding-left: 40px;
">

      <h3>Have a support question or issue?</h3>
      <br/>

      <a href="/contact-support">Visit our support page <i class="fa fa-long-arrow-right"></i></a>


    </div>


  </div>


</div>


<% include /partials/footer %>
